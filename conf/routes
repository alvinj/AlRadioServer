# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


# --------------
# online streams
# --------------

GET /playStream                   controllers.Radio.playStream(streamName: String)
GET /pauseVlc                     controllers.Radio.pauseVlc
GET /playVlc                      controllers.Radio.playVlc
GET /shutdownVlc                  controllers.Radio.shutdownVlc


# --------
# fm radio
# --------

GET /tuneRadio                    controllers.Radio.tuneRadio(station: String)
GET /turnRadioOff                 controllers.Radio.turnRadioOff

